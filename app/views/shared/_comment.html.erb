<%if comment.standing_position_id == value%>
  <div class="comment">
    <%= comment.text%>
    <%= comment.user.nickname%>
  </div>
  <% if user_signed_in?%>
    <% if comment.like?(current_user,comment) %>
        <%= link_to room_comment_like_path(@room.id, comment.id), method: :delete do %>
          <span style="color:red;">❤︎<%=comment.count_like(comment)%></span>
        <% end %>
    <% else %>
        <%= link_to room_comment_likes_path(@room.id, comment.id), method: :post do %>
          <span style="color:gray;">❤︎<%=comment.count_like(comment)%></span>
        <% end %>
    <% end %>
  <%else%>
    <span style="color:gray;">❤︎<%=comment.count_like(comment)%></span>
  <%end%>
  <%if current_user == comment.user%>
    <%= link_to "編集", edit_room_comment_path(@room,comment)%>
    <%= link_to "削除", room_comment_path(@room,comment),method: :delete%>
  <%end%>
<%end%>
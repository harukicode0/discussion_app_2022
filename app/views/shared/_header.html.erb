<header class='top-page-header'>
  <ul class="lists-left">
    <li><%= link_to 'YES or NO', "/" ,class:"top-logo"%> </li>
  </ul>

  <ul class='lists-right'>
    <li>
      <%= search_form_for Room.ransack(params[:q]), url: root_path, class: "search-form" do |f| %>
        <%= f.button type:"submit",class: 'search-button' do%>
          <i class="fas fa-search"></i>
        <%end%>
        <%= f.text_field :title, placeholder: "検索する", class: "input-box",id:'search-box',autocomplete: 'off', value: @value%>
      <% end %>
    </li>
      <li><% if user_signed_in?%><%=link_to 'Room作成', new_room_path , class: "create-room-list buttom"%><%end%></li>
      <% if user_signed_in?%>
        <li><%= link_to "#{current_user.nickname}さん", user_path(current_user), class: "name-list buttom" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout buttom"%> </li>
      <% else%>
        <li><%= link_to 'ログイン', '/users/sign_in', class: "login buttom" %></li>
        <li><%= link_to '新規登録', '/users/sign_up', class: "sign-up buttom" %></li>
      <% end%>
    </ul>
</header>
<%# #レイアウトは新規登録画面の転用 %>
<div class="sign-up-contents">
  <div class="sign-up-content">
    <div class="sign-up-title">
      ルーム編集
    </div>
    <div class="sign-up-bottom">
      <%= form_with model: @room_tag_user_form, url:room_path,method: :patch, local: true do |f| %>

      <%= render 'shared/error_messages', model: @room_tag_user_form%>

        <div class="field">
          <%= f.label :title, "タイトル",class:"label-name" %><br>
          <%= f.text_field :title, placeholder: "ディスカッションのテーマを入力してください",autocomplete: 'off', class:"input-name"%>
        </div>

        <div class="field">
          <%= f.label :tag_name, "タグ",class:"label-name"%><br>
          <%= f.text_field :tag_name, placeholder: "タグを紐付けしてください(任意)",autocomplete: 'off',class:"input-name",id:"tag_name"%>
          <div id="search-result"></div>
        </div>

        <div class="actions">
          <%= f.submit "編集する", class:"input-name submit-bottom"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
            <% @yes = 0 %>
            <% @no = 0 %>
            <% @userrooms.where(room_id:room.id).each do |userroom| %>
              <%if userroom.position != nil%>
                <%if userroom.position.standing_position_id == 1%>
                  <%@yes+=1%>
                <%elsif userroom.position.standing_position_id == 2%>
                  <%@no+=1%>
                <%end%>
              <%end%>
            <%end%>
            <%if @yes != 0 || @no != 0%>
              <% @y_percent = 100*@yes/(@yes + @no)%>
            <%end%>
      <div class="content">
        <a href="<%= room_path(room)%>" >
          <div class="content-top">
            <div class="contents-title">
              <%= room.name%>
            </div>
          </div>
        </a>
          <div class="content-percentage">
            <div class="agree">YES:
              <%if @yes != 0%><%=@y_percent%>%<%else%>0<%end%>
            </div>
            <div class="disagree">NO:
              <%if @no != 0%><%=100 - @y_percent%>%<%else%>0<%end%>
            </div>
          </div>


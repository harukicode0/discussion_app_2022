<%= render 'shared/header' %>
<div class="room-wrapper">
  <div class="room-platform">
    <div class="room-title">
      <div class="agree-room">
        <div class="agree-btn"></div>
        <div class="agree-text"></div>
      </div>
      <div class="disagree-room">
        <div class="disagree-btn"></div>
        <div class="disagree-text"></div>
      </div>
      
      <%= form_with(model: [@room, @comment], local: true) do |f|%>
        <div class="room-input-box">
            <div><%= f.text_area :text, placeholder:"投稿する" ,class:"comment_box"%></div>
            <div><%= f.submit '投稿', class:"comment_bottom_r"%></div>
        </div>
      <%end%>
      </div>
    </div>
  </div>
</div>
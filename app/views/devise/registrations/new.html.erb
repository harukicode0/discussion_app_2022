<div class="sign-up-contents">
  <div class="sign-up-content">
  <div class="sign-up-title">新規登録</div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nickname, "ニックネーム",class:"label-name" %><span class="necessary">必須</span><br>
        <%= f.email_field :nickname, autofocus: true, autocomplete: "ニックネーム",class:"input-name"%>
      </div>

      <div class="field">
        <%= f.label :sex_id, "性別" %><br>
        <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"input-tab sex-select"}) %>
      </div>

      <div class="field">
        <%= f.label :birthday, "生年月日" %><br>
        <%= f.date_select :birthday, {start_year: 1950, end_year: 2016,include_blank: true, use_two_digit_numbers: true},{class: "input-tab birthday-select"}%>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><span class="necessary">必須</span><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"input-name" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em><span class="necessary">必須</span>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"input-name"%>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード再入力" %><span class="necessary">必須</span><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input-name"%>
      </div>

      <div class="actions">
        <%= f.submit "登録", class:"input-name submit-bottom"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
